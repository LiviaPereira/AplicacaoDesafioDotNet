@model AtualizarAlunoViewModel

<h2>Editar Aluno</h2>

<form asp-action="AtualizarAluno" asp-controller="Aluno" method="post">
    <input type="hidden" asp-for="IdAluno" />

    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Usuario">Usuário:</label>
        <input asp-for="Usuario" class="form-control" />
    </div>    
    <div class="form-group">
        <label for="Ativo">Ativo:</label>
        <input asp-for="Ativo" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Atualizar Aluno</button>
</form>

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}